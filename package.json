{
  "name": "michealpearcecdev",
  "version": "1.0.0",
  "packageManager": "yarn@4.0.1",
  "scripts": {
	"dev:sass": "sass --load-path=scss --watch style.scss:style.css scss:css",
	"dev:lib": "nodemon",
	"dev": "run-p dev:sass dev:lib",
	"build:sass": "sass --no-source-map --style=compressed --load-path=scss style.scss:style.css scss:css",
	"build:lib": "composer dump-autoload --optimize",
	"build": "run-s build:sass build:lib",
	"pull:update": "git pull && composer install && yarn install && yarn build"
  },
  "nodemonConfig": {
	"exec": "composer dump-autoload",
	"ext": "php",
	"watch": [
	  "lib"
	]
  },
  "devDependencies": {
	"nodemon": "^3.0.1",
	"npm-run-all": "^4.1.5",
	"sass": "^1.69.5"
  }
}
